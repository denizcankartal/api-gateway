# API Gateway Configuration
# Copy this file to .env and adjust values for your environment

# Rate Limiting
RATE_LIMIT_RPM=100              # Requests per minute per client
RATE_LIMIT_BURST=20             # Burst capacity for traffic spikes

# Circuit Breaker
CB_FAILURE_THRESHOLD=5          # Open circuit after N consecutive failures
CB_SUCCESS_THRESHOLD=2          # Close circuit after N successes in half-open state
CB_TIMEOUT=30                   # Seconds to wait before testing recovery (half-open)
CB_WINDOW=60                    # Failure counting window in seconds
